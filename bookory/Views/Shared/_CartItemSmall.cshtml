@model bookory.Models.Book
}
<li class="woocommerce-mini-cart-item mini_cart_item">
	<a asp-controller="Cart" asp-action="RemoveFromCart"
	class="remove remove_from_cart_button" aria-label="Remove this item" data-product_id="111" 
	data-cart_item_key="698d51a19d8a121ce581499d7b701668" data-product_sku="gbk-235">×</a>			
	<a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id">
		<img width="600" height="840" src=@Model.CoverUrl
		class="attachment-woocommerce_thumbnail size-woocommerce_thumbnail" alt="" decoding="async">@Model.Title</a>
	<dl class="variation">
		<dt class="variation-Vendor">Vendor:</dt>
		<dd class="variation-Vendor">
			<p>BookPlace</p>
		</dd>
	</dl>
	<span class="quantity">1 × <span class="woocommerce-Price-amount amount"><bdi><span class="woocommerce-Price-currencySymbol">$</span>@Model.Price</bdi></span></span>
</li>